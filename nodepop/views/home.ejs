<%- include('header.ejs') %>

  <div class="container">

    <p>User ID: <%= session.userId %>
    </p>

    <% if (!session.userId) { %>
      <% // contenido para usuarios NO logados %>
        <p><a href="/auth/login">Login</a> to access your products</p>
        <% } else { %>
          <h2>Products</h2>
          <% products.forEach(product=> { %>
            <p>
              <%= product.name %> |
                <%= product.owner %> |
                  <%= product.price %>â‚¬ |
                    <img src="<%= product.image %>" alt="<%= product.name %>" width="100" /> |
                    <%= product.tags.join(', ') %>
                    <a href="/products/delete/<%= product._id%>"><i class="bi bi-trash3"></i></a>
            </p>
          <% }) %>
        <% } %>
  </div>
  
